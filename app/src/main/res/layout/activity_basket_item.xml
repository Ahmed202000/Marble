<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imagemarble"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Basket_item">


    <GridView
        android:id="@+id/gvBasket"
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="500dp"
        android:background="#000">

    </LinearLayout>


    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الاجمالي النهائي :"
        android:layout_marginStart="20dp"
        android:layout_above="@+id/SaveCart"
        android:textColor="#FF0000"
        android:textStyle="bold|italic"
        android:textSize="25sp" />

    <Button
        android:id="@+id/SaveCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:onClick="SaveCart"
        android:layout_marginBottom="10dp"
        android:background="@drawable/spinsh_text"
        android:text="متابعه عمليه الشراء"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginTop="10sp" />

    <TextView
        android:id="@+id/txt_finalTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/SaveCart"
        android:layout_marginStart="46dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/txt"
        android:gravity="center"
        android:textColor="#FF0000"
        android:textSize="25sp" />




</RelativeLayout>