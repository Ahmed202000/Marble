<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/sheaplayout">


        <ImageView
            android:id="@+id/imglogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/txtpro_name"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="119dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/sheaplayout"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtpro_price"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="119dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/sheaplayout"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtpro_Total"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="119dp"
            android:layout_marginTop="97dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/sheaplayout"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ltxtpro_Amuent"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imglogo"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="119dp"
            android:layout_marginEnd="202dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imgminus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="130dp"
            android:layout_marginTop="125dp"
            android:background="#C9C7C7"
            android:padding="5dp"
            android:src="@drawable/minus" />

        <ImageView
            android:id="@+id/imgadd"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_below="@+id/imglogo"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="125dp"
            android:background="#C9C7C7"
            android:padding="5dp"
            android:src="@drawable/add"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="131dp"
            android:text="اسم المنتج   "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="59dp"
            android:layout_marginEnd="131dp"
            android:text="سعر المتر      "
            android:textColor="#000000" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="103dp"
            android:layout_marginEnd="131dp"
            android:text="الاجمالي"
            android:textColor="#FF0000" />

    </RelativeLayout>


</LinearLayout>